<!-- Welcome Banner -->
<div class="welcome-banner">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-auto">
                <div class="avatar-container">
                    <div class="avatar-placeholder" id="avatarPreview">
                        <% if (user.profilePhoto) { %>
                            <img src="<%= user.profilePhoto %>" alt="Profile Photo" class="avatar-image">
                        <% } else { %>
                            <i class="fas fa-user"></i>
                        <% } %>
                    </div>
                    <label for="photoUpload" class="btn-upload" title="Upload Photo">
                        <i class="fas fa-camera"></i>
                    </label>
                    <input type="file" id="photoUpload" name="profilePhoto" accept="image/*" style="display: none;">
                </div>
            </div>
            <div class="col">
                <h1 class="welcome-text">Welcome back, <%= user.firstName %>!</h1>
                <p class="welcome-subtitle">Manage your account settings and preferences</p>
            </div>
        </div>
    </div>
</div>

<div class="container py-5">
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger alert-custom" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i><%= error %>
        </div>
    <% } %>

    <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success alert-custom" role="alert">
            <i class="fas fa-check-circle me-2"></i><%= success %>
        </div>
    <% } %>

    <div class="row g-4">
        <!-- Left Column -->
        <div class="col-lg-4">
            <!-- Quick Stats Card -->
            <div class="account-card stats-card">
                <div class="card-header">
                    <h2 class="card-title">
                        <i class="fas fa-chart-bar me-2"></i>Quick Stats
                    </h2>
                </div>
                <div class="card-body">
                    <div class="stats-grid">
                        <div class="stat-item">
                            <div class="stat-icon events-attended">
                                <i class="fas fa-calendar-check"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-value"><%= typeof pastEventsCount !== 'undefined' ? pastEventsCount : 0 %></div>
                                <div class="stat-label">Events Attended</div>
                            </div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-icon events-hosted">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-value"><%= typeof eventsHostedCount !== 'undefined' ? eventsHostedCount : 0 %></div>
                                <div class="stat-label">Events Hosted</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Profile Information Card -->
            <div class="account-card profile-card">
                <div class="card-header">
                    <h2 class="card-title">
                        <i class="fas fa-user-circle me-2"></i>Profile Information
                    </h2>
                </div>
                <div class="card-body">
                    <div class="profile-info">
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="info-content">
                                <span class="info-label">Username</span>
                                <span class="info-value"><%= user.username %></span>
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-id-card"></i>
                            </div>
                            <div class="info-content">
                                <span class="info-label">Name</span>
                                <span class="info-value"><%= user.firstName %> <%= user.lastName %></span>
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div class="info-content">
                                <span class="info-label">Email</span>
                                <span class="info-value"><%= user.email %></span>
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-phone"></i>
                            </div>
                            <div class="info-content">
                                <span class="info-label">Phone</span>
                                <span class="info-value"><%= user.phone %></span>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-shield-alt"></i>
                            </div>
                            <div class="info-content">
                                <span class="info-label">Account Type</span>
                                <span class="badge badge-secondary"><%= user.accountType.charAt(0).toUpperCase() + user.accountType.slice(1) %></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-lg-8">
            <!-- Edit Profile Card -->
            <div class="account-card edit-card">
                <div class="card-header">
                    <h2 class="card-title">
                        <i class="fas fa-edit me-2"></i>Edit Profile
                    </h2>
                </div>
                <div class="card-body">
                    <form action="/account/update-profile" method="POST" class="profile-form">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="username" class="form-label">
                                        <i class="fas fa-user me-2"></i>Username
                                    </label>
                                    <input type="text" class="form-control" id="username" name="username" value="<%= user.username %>" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="email" class="form-label">
                                        <i class="fas fa-envelope me-2"></i>Email
                                    </label>
                                    <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="firstName" class="form-label">
                                        <i class="fas fa-id-card me-2"></i>First Name
                                    </label>
                                    <input type="text" class="form-control" id="firstName" name="firstName" value="<%= user.firstName %>" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="lastName" class="form-label">Last Name</label>
                                    <input type="text" class="form-control" id="lastName" name="lastName" value="<%= user.lastName %>" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="phone" class="form-label">
                                        <i class="fas fa-phone me-2"></i>Phone
                                    </label>
                                    <input type="text" class="form-control" id="phone" name="phone" value="<%= user.phone %>" required>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Update Profile
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Change Password Card -->
            <div class="account-card password-card">
                <div class="card-header">
                    <h2 class="card-title">
                        <i class="fas fa-lock me-2"></i>Change Password
                    </h2>
                </div>
                <div class="card-body">
                    <form action="/account/change-password" method="POST" class="password-form">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="currentPassword" class="form-label">
                                        <i class="fas fa-key me-2"></i>Current Password
                                    </label>
                                    <input type="password" class="form-control" id="currentPassword" name="currentPassword" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="newPassword" class="form-label">
                                        <i class="fas fa-lock me-2"></i>New Password
                                    </label>
                                    <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="confirmPassword" class="form-label">
                                        <i class="fas fa-check-circle me-2"></i>Confirm New Password
                                    </label>
                                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-shield-alt me-2"></i>Change Password
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Account Actions Card -->
            <div class="account-card actions-card">
                <div class="card-header">
                    <h2 class="card-title">
                        <i class="fas fa-cog me-2"></i>Account Actions
                    </h2>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <a href="/logout" class="btn btn-outline-primary btn-lg w-100 action-btn">
                                <i class="fas fa-sign-out-alt me-2"></i>Log Out
                            </a>
                        </div>
                        <div class="col-md-6">
                            <button type="button" class="btn btn-outline-danger btn-lg w-100 action-btn" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">
                                <i class="fas fa-trash-alt me-2"></i>Delete Account
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Account Modal -->
<div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-labelledby="deleteAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteAccountModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Account Deletion
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone.
                </div>
                <p>Are you sure you want to delete your account? This will:</p>
                <ul class="deletion-list">
                    <li><i class="fas fa-times me-2"></i>Cancel your membership</li>
                    <li><i class="fas fa-times me-2"></i>Remove all your personal data</li>
                    <li><i class="fas fa-times me-2"></i>Delete your event history</li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-arrow-left me-2"></i>Cancel
                </button>
                <form action="/account/delete" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i>Delete Account
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

