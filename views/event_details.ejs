<main class="event-details-page">
    <div class="event-header">
        <a href="/events" class="back-link">‚Üê Back to Events</a>
        <% if (user && (user.isAdmin || user.username === event.organizer)) { %>
            <div class="event-actions">
                <a href="/events/edit/<%= event._id %>" class="btn btn-secondary">Edit Event</a>
                <button class="btn btn-danger" onclick="deleteEvent('<%= event._id %>')">Delete Event</button>
            </div>
        <% } %>
    </div>

    <div class="event-container">
        <!-- Hero Image -->
        <% if (event.images && event.images.length > 0) { %>
            <div class="hero-image">
                <img src="<%= formatImagePath(event.images[0]) %>" alt="<%= event.summary %>">
            </div>
        <% } else if (event.image) { %>
            <div class="hero-image">
                <img src="<%= formatImagePath(event.image) %>" alt="<%= event.summary %>">
            </div>
        <% } %>

        <div class="event-content">
            <!-- Event Title and Basic Info -->
            <div class="event-header-info">
                <h1><%= event.summary %></h1>
                <div class="event-meta">
                    <div class="meta-item">
                        <i class="far fa-calendar"></i>
                        <% 
                            const timeZone = event.timezone || 'America/New_York';
                            const startDate = moment.tz(event.dtstart, timeZone);
                            const endDate = moment.tz(event.dtend, timeZone);
                        %>
                        <%= startDate.format('dddd, MMMM D, YYYY') %>
                    </div>
                    <div class="meta-item">
                        <i class="far fa-clock"></i>
                        <%= startDate.format('h:mm A') %> - <%= endDate.format('h:mm A') %> 
                        <span class="timezone">(<%= startDate.format('z') %>)</span>
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <a href="https://www.openstreetmap.org/search?query=<%= encodeURIComponent(event.location) %>" target="_blank" class="location-link">
                            <%= event.location %>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Event Description -->
            <div class="event-description">
                <div class="description-header">
                    <h2>About this Event</h2>
                    <a href="/events/event/<%= event.eventId %>/download" class="calendar-btn" title="Add to your calendar">
                        <i class="far fa-calendar-plus"></i>
                        Add to Calendar
                    </a>
                </div>
                <div class="description-content">
                    <%= event.description %>
                    <% if (event.link) { %>
                        <div class="event-link">
                            <strong>Event Link:</strong>
                            <a href="<%= event.link %>" target="_blank" rel="noopener noreferrer"><%= event.link %></a>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Host Section -->
            <div class="host-section">
                <div class="section-header">
                    <h3>Event Host</h3>
                    <% if (!event.host || !event.host.username) { %>
                        <% if (user) { %>
                            <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#hostModal">
                                <i class="fas fa-hand-paper"></i> Volunteer to Host
                            </button>
                        <% } %>
                    <% } %>
                </div>
                
                <% if (event.host && event.host.username) { %>
                    <% if (event.host.status === 'approved') { %>
                        <div class="alert alert-success">
                            <i class="fas fa-user-check"></i>
                            This event is hosted by <strong><%= event.host.username %></strong>
                            <% if (event.host.approvedAt) { %>
                                <br><small>Approved on <%= moment(event.host.approvedAt).format('MMM D, YYYY') %></small>
                            <% } %>
                        </div>
                    <% } else if (event.host.status === 'pending') { %>
                        <div class="alert alert-warning">
                            <i class="fas fa-clock"></i>
                            Host application from <strong><%= event.host.username %></strong> is pending approval
                            <% if (event.host.appliedAt) { %>
                                <br><small>Applied on <%= moment(event.host.appliedAt).format('MMM D, YYYY') %></small>
                            <% } %>
                        </div>
                    <% } else if (event.host.status === 'rejected') { %>
                        <div class="alert alert-danger">
                            <i class="fas fa-times-circle"></i>
                            Host application from <strong><%= event.host.username %></strong> was not approved
                        </div>
                    <% } %>
                <% } else { %>
                    <div class="host-info">
                        <p>No host assigned yet. Would you like to host this event?</p>
                    </div>
                <% } %>
                
                <!-- Show user's host application status if they have one -->
                <% if (user && event.host && event.host.username === user.username) { %>
                    <div class="user-host-status">
                        <% if (event.host.status === 'pending') { %>
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i>
                                Your host application is pending approval
                            </div>
                        <% } else if (event.host.status === 'approved') { %>
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle"></i>
                                Your host application has been approved!
                            </div>
                        <% } else if (event.host.status === 'rejected') { %>
                            <div class="alert alert-danger">
                                <i class="fas fa-times-circle"></i>
                                Your host application was not approved
                            </div>
                        <% } %>
                    </div>
                <% } %>
            </div>

            <!-- RSVP Section -->
            <div class="rsvp-section">
                <div class="section-header">
                    <h3>RSVP to this Event</h3>
                    <% if (user && !event.rsvps.some(rsvp => rsvp.username === user.username)) { %>
                        <% if (!event.maxRSVPs || event.rsvps.length < event.maxRSVPs) { %>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#rsvpModal">
                                <i class="fas fa-check"></i> RSVP Now
                            </button>
                        <% } else { %>
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                This event has reached its maximum RSVP limit.
                            </div>
                        <% } %>
                    <% } else if (!user) { %>
                        <div class="alert alert-info">
                            <i class="fas fa-sign-in-alt"></i> Login to RSVP
                        </div>
                    <% } %>
                </div>

                <% if (user && event.rsvps.some(rsvp => rsvp.username === user.username)) { %>
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i>
                        You are RSVPed to this event!
                        <button type="button" class="btn btn-sm btn-outline-danger ms-2" onclick="cancelRSVP('<%= event.eventId %>')">
                            Cancel RSVP
                        </button>
                    </div>
                <% } %>

                <!-- Attendees List -->
                <div class="attendees-section">
                    <h4>Attendees (<span id="attendeeCount"><%= event.rsvps.length %></span><% if (event.maxRSVPs) { %>/<%= event.maxRSVPs %><% } %>)</h4>
                    
                    <% if (event.rsvps && event.rsvps.length > 0) { %>
                        <div class="attendees-list">
                            <% event.rsvps.forEach(function(rsvp) { %>
                                <div class="attendee-item">
                                    <div class="attendee-info">
                                        <span class="attendee-name"><%= rsvp.username %></span>
                                        <small class="attendee-date">RSVPed on <%= moment(rsvp.createdAt).format('MMM D, YYYY') %></small>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <p>No RSVPs yet. Be the first to RSVP!</p>
                    <% } %>
                </div>

                <% if (event.maxRSVPs && event.rsvps.length >= event.maxRSVPs) { %>
                    <div class="alert alert-warning">
                        <i class="fas fa-users"></i>
                        This event has reached its maximum capacity.
                    </div>
                <% } %>
            </div>

            <!-- Photo Gallery -->
            <% if (event.images && event.images.length > 1) { %>
                <div class="photo-gallery">
                    <h3>Event Photos</h3>
                    <div class="gallery-grid">
                        <% event.images.slice(1).forEach(image => { %>
                            <div class="gallery-item">
                                <img src="<%= formatImagePath(image) %>" alt="Event Photo">
                            </div>
                        <% }); %>
                    </div>
                </div>
            <% } %>

            <div class="event-disclaimer">
                <i class="fas fa-info-circle"></i>
                <em>Calendar events are subject to change. Please check back for updates.</em>
            </div>
        </div>
    </div>

    <!-- RSVP Modal -->
    <div class="modal fade" id="rsvpModal" tabindex="-1" aria-labelledby="rsvpModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="rsvpModalLabel">RSVP to <%= event.summary %></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="rsvpAlert" class="alert" style="display: none;"></div>
                    <form id="rsvpForm">
                        <div class="form-group">
                            <label for="phoneNumber" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" 
                                   pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
                                   placeholder="e.g., 123-456-7890" required>
                            <small class="form-text">Required for event updates and reminders. Format: XXX-XXX-XXXX</small>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">
                            <i class="fas fa-check"></i> Confirm RSVP
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Host Modal -->
    <div class="modal fade" id="hostModal" tabindex="-1" aria-labelledby="hostModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="hostModalLabel">Volunteer to Host <%= event.summary %></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="host-responsibilities">
                        <p><strong>Thank you for volunteering to host this event!</strong> As a host, you will be responsible for:</p>
                        <ul>
                            <li>Coordinating with attendees</li>
                            <li>Being present at the event location</li>
                            <li>Ensuring safety guidelines are followed</li>
                            <li>Reporting any issues to the admin team</li>
                        </ul>
                    </div>
                    <form id="hostForm">
                        <div class="form-group">
                            <label for="hostPhone" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="hostPhone" required>
                        </div>
                        <div class="form-group">
                            <label for="hostExperience" class="form-label">Relevant Experience</label>
                            <textarea class="form-control" id="hostExperience" rows="3" 
                                      placeholder="Tell us about your experience with event hosting or relevant skills..." required></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="submitHostApplication()">
                        <i class="fas fa-paper-plane"></i> Submit Application
                    </button>
                </div>
            </div>
        </div>
    </div>
</main>

