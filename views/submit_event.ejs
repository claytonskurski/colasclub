<!-- Event Header -->
<div class="events-header">
    <div class="container text-center py-5">
        <h1 class="display-4 fw-bold header-title">Submit Your Event Idea</h1>
        <h2 class="subheading fs-4 mt-2">Share your adventure ideas with our community!</h2>
        <p class="lead mt-3 mx-auto header-description">
            Have an idea for a hike, kayaking trip, or weekend getaway? Let's make it happen! Share your vision, and our Cola's Club community will bring it to life.
        </p>
    </div>
</div>

<!-- Main Content -->
<div class="container py-5">
    <div class="row">
        <!-- Form Section -->
        <div class="col-lg-8">
            <!-- Progress Indicator -->
            <div class="progress-container mb-5">
                <div class="progress" style="height: 8px;">
                    <div class="progress-bar" role="progressbar" style="width: 25%;" id="progressBar"></div>
                </div>
                <div class="progress-text" id="progressText">Step 1 of 4</div>
            </div>

            <form id="submitEventForm" class="needs-validation" novalidate>
                <!-- Step 1: Event Details -->
                <div class="form-section" id="section-1">
                    <div class="section-card">
                        <div class="section-header">
                            <div class="section-icon">
                                <i class="fas fa-mountain"></i>
                            </div>
                            <h3 class="section-title">Event Details</h3>
                            <p class="section-subtitle">Tell us about your adventure idea</p>
                        </div>
                        <div class="section-body">
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="summary" class="form-label">
                                            <i class="fas fa-tag me-2"></i>Event Title
                                        </label>
                                        <input type="text" class="form-control" id="summary" name="summary" 
                                            placeholder="E.g., Sunset Kayak on Lake Murray" required>
                                        <div class="invalid-feedback">Please provide a title for your event.</div>
                                        <div class="form-help">A catchy name helps attract participants</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="description" class="form-label">
                                            <i class="fas fa-align-left me-2"></i>Description
                                        </label>
                                        <textarea class="form-control" id="description" name="description" 
                                            rows="4" placeholder="What will participants do? Why is this event special?" required></textarea>
                                        <div class="invalid-feedback">Please provide a description of your event.</div>
                                        <div class="form-help">Share the details and excitement of your adventure</div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="tags" class="form-label">
                                            <i class="fas fa-tags me-2"></i>Tags
                                        </label>
                                        <input type="text" class="form-control" id="tags" name="tags" 
                                            placeholder="E.g., hiking, kayaking, nature">
                                        <div class="form-help">Use commas to separate tags (e.g., hiking, kayaking, social)</div>
                                        <div class="tag-suggestions">
                                            <span class="tag-chip" data-tag="hiking">Hiking</span>
                                            <span class="tag-chip" data-tag="kayaking">Kayaking</span>
                                            <span class="tag-chip" data-tag="camping">Camping</span>
                                            <span class="tag-chip" data-tag="social">Social</span>
                                            <span class="tag-chip" data-tag="nature">Nature</span>
                                            <span class="tag-chip" data-tag="adventure">Adventure</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="section-footer">
                            <button type="button" class="btn btn-primary btn-next" onclick="showSection(2)">
                                Next Step <i class="fas fa-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Step 2: Location & Schedule -->
                <div class="form-section d-none" id="section-2">
                    <div class="section-card">
                        <div class="section-header">
                            <div class="section-icon">
                                <i class="fas fa-map-pin"></i>
                            </div>
                            <h3 class="section-title">Location & Schedule</h3>
                            <p class="section-subtitle">When and where will your adventure take place?</p>
                        </div>
                        <div class="section-body">
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="location" class="form-label">
                                            <i class="fas fa-location-dot me-2"></i>Location
                                        </label>
                                        <input type="text" class="form-control" id="location" name="location" 
                                            placeholder="E.g., Congaree National Park, SC" required>
                                        <div class="invalid-feedback">Please specify the location of your event.</div>
                                        <div class="form-help">Include the city or specific place</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="date" class="form-label">
                                                    <i class="fas fa-calendar me-2"></i>Date
                                                </label>
                                                <input type="date" class="form-control" id="date" name="date" required>
                                                <div class="invalid-feedback">Please select a date for your event.</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="time" class="form-label">
                                                    <i class="fas fa-clock me-2"></i>Time
                                                </label>
                                                <input type="time" class="form-control" id="time" name="time" required>
                                                <div class="invalid-feedback">Please select a start time for your event.</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="duration" class="form-label">
                                            <i class="fas fa-hourglass-half me-2"></i>Duration (hours)
                                        </label>
                                        <input type="number" class="form-control" id="duration" name="duration" 
                                            min="0.5" step="0.5" placeholder="E.g., 2.5" required>
                                        <div class="invalid-feedback">Please specify the duration (minimum 0.5 hours).</div>
                                        <div class="form-help">How long will the event last?</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="section-footer">
                            <button type="button" class="btn btn-outline-primary btn-prev" onclick="showSection(1)">
                                <i class="fas fa-arrow-left me-2"></i>Previous
                            </button>
                            <button type="button" class="btn btn-primary btn-next" onclick="showSection(3)">
                                Next Step <i class="fas fa-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Step 3: Event Settings -->
                <div class="form-section d-none" id="section-3">
                    <div class="section-card">
                        <div class="section-header">
                            <div class="section-icon">
                                <i class="fas fa-cog"></i>
                            </div>
                            <h3 class="section-title">Event Settings</h3>
                            <p class="section-subtitle">Configure the details for your event</p>
                        </div>
                        <div class="section-body">
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="difficulty" class="form-label">
                                            <i class="fas fa-chart-line me-2"></i>Difficulty Level
                                        </label>
                                        <select class="form-control" id="difficulty" name="difficulty" required>
                                            <option value="" disabled selected>Select difficulty...</option>
                                            <option value="easy">Easy - Suitable for beginners</option>
                                            <option value="moderate">Moderate - Some experience helpful</option>
                                            <option value="challenging">Challenging - Good fitness required</option>
                                            <option value="difficult">Difficult - Advanced participants only</option>
                                        </select>
                                        <div class="invalid-feedback">Please select a difficulty level for your event.</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="maxParticipants" class="form-label">
                                            <i class="fas fa-users me-2"></i>Maximum Participants
                                        </label>
                                        <input type="number" class="form-control" id="maxParticipants" name="maxParticipants" 
                                            min="1" placeholder="E.g., 15" required>
                                        <div class="invalid-feedback">Please specify the maximum number of participants (minimum 1).</div>
                                        <div class="form-help">How many people can join?</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="section-footer">
                            <button type="button" class="btn btn-outline-primary btn-prev" onclick="showSection(2)">
                                <i class="fas fa-arrow-left me-2"></i>Previous
                            </button>
                            <div class="next-actions">
                                <button type="button" class="btn btn-outline-secondary me-2" id="saveDraftButton">
                                    <i class="fas fa-save me-2"></i>Save Draft
                                </button>
                                <button type="button" class="btn btn-primary btn-next" onclick="showSection(4)">
                                    Next Step <i class="fas fa-arrow-right ms-2"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Step 4: Contact Information -->
                <div class="form-section d-none" id="section-4">
                    <div class="section-card">
                        <div class="section-header">
                            <div class="section-icon">
                                <i class="fas fa-address-card"></i>
                            </div>
                            <h3 class="section-title">Contact Information</h3>
                            <p class="section-subtitle">How can participants reach you?</p>
                        </div>
                        <div class="section-body">
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="contactName" class="form-label">
                                            <i class="fas fa-user me-2"></i>Full Name
                                        </label>
                                        <input type="text" class="form-control" id="contactName" name="contactName" 
                                            placeholder="Your full name" required>
                                        <div class="invalid-feedback">Please provide your full name.</div>
                                        <div class="form-help">This will be the main point of contact</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="contactPhone" class="form-label">
                                            <i class="fas fa-phone me-2"></i>Phone Number
                                        </label>
                                        <input type="tel" class="form-control" id="contactPhone" name="contactPhone" 
                                            placeholder="(803) XXX-XXXX" required>
                                        <div class="invalid-feedback">Please provide a valid phone number.</div>
                                        <div class="form-help">For emergency contact and coordination</div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="contactEmail" class="form-label">
                                            <i class="fas fa-envelope me-2"></i>Email Address
                                        </label>
                                        <input type="email" class="form-control" id="contactEmail" name="contactEmail" 
                                            placeholder="your@email.com" required>
                                        <div class="invalid-feedback">Please provide a valid email address.</div>
                                        <div class="form-help">For event updates and participant communication</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="section-footer">
                            <button type="button" class="btn btn-outline-primary btn-prev" onclick="showSection(3)">
                                <i class="fas fa-arrow-left me-2"></i>Previous
                            </button>
                            <div class="submit-actions">
                                <button type="button" class="btn btn-outline-secondary me-2" id="saveDraftButton2">
                                    <i class="fas fa-save me-2"></i>Save Draft
                                </button>
                                <button type="submit" class="btn btn-primary btn-submit" id="submitButton">
                                    <span class="button-text">
                                        <i class="fas fa-paper-plane me-2"></i>Submit Your Event
                                    </span>
                                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <!-- Preview Panel -->
        <div class="col-lg-4">
            <div class="preview-panel sticky-top">
                <div class="preview-header">
                    <h4 class="preview-title">
                        <i class="fas fa-eye me-2"></i>Event Preview
                    </h4>
                </div>
                <div class="preview-body" id="previewContent">
                    <div class="preview-item">
                        <span class="preview-label">Title:</span>
                        <span class="preview-value" id="previewTitle">Not set</span>
                    </div>
                    <div class="preview-item">
                        <span class="preview-label">Description:</span>
                        <span class="preview-value" id="previewDescription">Not set</span>
                    </div>
                    <div class="preview-item">
                        <span class="preview-label">Tags:</span>
                        <span class="preview-value" id="previewTags">Not set</span>
                    </div>
                    <div class="preview-item">
                        <span class="preview-label">Location:</span>
                        <span class="preview-value" id="previewLocation">Not set</span>
                    </div>
                    <div class="preview-item">
                        <span class="preview-label">Date & Time:</span>
                        <span class="preview-value" id="previewDateTime">Not set</span>
                    </div>
                    <div class="preview-item">
                        <span class="preview-label">Duration:</span>
                        <span class="preview-value" id="previewDuration">Not set</span>
                    </div>
                    <div class="preview-item">
                        <span class="preview-label">Difficulty:</span>
                        <span class="preview-value" id="previewDifficulty">Not set</span>
                    </div>
                    <div class="preview-item">
                        <span class="preview-label">Max Participants:</span>
                        <span class="preview-value" id="previewMaxParticipants">Not set</span>
                    </div>
                    <div class="preview-item">
                        <span class="preview-label">Contact:</span>
                        <span class="preview-value" id="previewContact">Not set</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

