    <script>
        // Password validation
        document.addEventListener('DOMContentLoaded', function() {
            const passwordInput = document.getElementById('password');
            const passwordRequirements = document.querySelectorAll('.password-requirements li');
            
            passwordInput.addEventListener('input', function() {
                const password = this.value;
                
                // Check minimum length (6 characters)
                if (password.length >= 6) {
                    passwordRequirements[0].innerHTML = '<i class="fas fa-check-circle text-success me-2"></i>At least 6 characters long ✓';
                    passwordRequirements[0].classList.add('text-success');
                } else {
                    passwordRequirements[0].innerHTML = '<i class="fas fa-times-circle text-danger me-2"></i>At least 6 characters long';
                    passwordRequirements[0].classList.remove('text-success');
                }
                
                // Check if password is not too common
                const commonPasswords = ['password', '123456', 'qwerty', 'admin', 'letmein'];
                if (!commonPasswords.includes(password.toLowerCase())) {
                    passwordRequirements[1].innerHTML = '<i class="fas fa-check-circle text-success me-2"></i>Should be unique and secure ✓';
                    passwordRequirements[1].classList.add('text-success');
                } else {
                    passwordRequirements[1].innerHTML = '<i class="fas fa-times-circle text-danger me-2"></i>Should be unique and secure (avoid common passwords)';
                    passwordRequirements[1].classList.remove('text-success');
                }
                
                // Check for complexity (mix of letters, numbers, symbols)
                const hasLetter = /[a-zA-Z]/.test(password);
                const hasNumber = /\d/.test(password);
                const hasSymbol = /[!@#$%^&*(),.?":{}|<>]/.test(password);
                
                if (hasLetter && hasNumber && hasSymbol) {
                    passwordRequirements[2].innerHTML = '<i class="fas fa-check-circle text-success me-2"></i>Excellent complexity with letters, numbers, and symbols ✓';
                    passwordRequirements[2].classList.add('text-success');
                } else if (hasLetter && hasNumber) {
                    passwordRequirements[2].innerHTML = '<i class="fas fa-check-circle text-warning me-2"></i>Good complexity with letters and numbers';
                    passwordRequirements[2].classList.remove('text-success');
                } else {
                    passwordRequirements[2].innerHTML = '<i class="fas fa-info-circle text-info me-2"></i>Consider using a mix of letters, numbers, and symbols';
                    passwordRequirements[2].classList.remove('text-success');
                }
            });
        });
    </script>

