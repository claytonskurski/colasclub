

<!-- Updated header with light gray background and better styling -->
<header class="calendar-header">
    <div class="header-container">
        <h1>Event Calendar</h1>
        <p class="header-subtitle">Discover and plan your next adventure</p>
    </div>
</header>

<main class="calendar-main">
    <!-- Enhanced top section layout -->
    <section class="top-section">
        <!-- Upcoming Events Card -->
        <div class="upcoming-events-card">
            <div class="card-header">
                <h2>
                    <i class="fas fa-calendar-check"></i>
                    Upcoming Events
                </h2>
            </div>
            <div class="card-content">
                <% 
                    const today = moment().startOf('day');
                    const nextWeek = moment().add(7, 'days').endOf('day');
                    const filteredEvents = events.filter(function(event) {
                        const eventDate = moment(event.dtstart);
                        return eventDate.isBetween(today, nextWeek, null, '[]');
                    });
                %>
                <% if (filteredEvents.length > 0) { %>
                    <div class="events-list">
                        <% filteredEvents.slice(0, 5).forEach(function(event) { %>
                            <% 
                                let type = (event.type || '').toLowerCase();
                                let typeIcon = type === 'hike' ? 'fa-hiking' : 
                                             type === 'water' ? 'fa-water' : 
                                             type === 'social' ? 'fa-users' : 
                                             type === 'sport' ? 'fa-running' : 
                                             type === 'bike' ? 'fa-biking' : 'fa-calendar';
                                let typeEmoji = type === 'hike' ? '🥾' : 
                                              type === 'water' ? '🚣' : 
                                              type === 'social' ? '👥' : 
                                              type === 'sport' ? '🏃' : 
                                              type === 'bike' ? '🚴' : '📅';
                            %>
                            <a href="/events/event/<%= event.eventId %>" class="event-item">
                                <div class="event-date-badge">
                                    <span class="date-day"><%= moment(event.dtstart).format('D') %></span>
                                    <span class="date-month"><%= moment(event.dtstart).format('MMM') %></span>
                                </div>
                                <div class="event-details">
                                    <h3 class="event-title"><%= event.summary %></h3>
                                    <div class="event-meta">
                                        <span class="event-type">
                                            <span class="type-emoji"><%= typeEmoji %></span>
                                            <%= type.charAt(0).toUpperCase() + type.slice(1) %>
                                        </span>
                                        <span class="event-time">
                                            <i class="fas fa-clock"></i>
                                            <%= moment(event.dtstart).format('h:mm A') %>
                                        </span>
                                    </div>
                                </div>
                                <div class="event-arrow">
                                    <i class="fas fa-chevron-right"></i>
                                </div>
                            </a>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="no-events">
                        <i class="fas fa-calendar-times"></i>
                        <p>No upcoming events in the next 7 days</p>
                        <a href="/events" class="view-all-btn">View All Events</a>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Enhanced submit event card -->
        <div class="submit-event-card">
            <div class="submit-content">
                <div class="submit-icon">
                    <i class="fas fa-plus"></i>
                </div>
                <h3>Have an Adventure Idea?</h3>
                <p>Share your outdoor adventure ideas with the community and help others discover new experiences.</p>
                <a href="/submit_event" class="submit-btn">
                    <i class="fas fa-plus"></i>
                    Submit Event
                </a>
            </div>
        </div>
    </section>

    <!-- Enhanced calendar section -->
    <section class="calendar-section">
        <div class="calendar-card">
            <div class="calendar-header-section">
                <h2>
                    <i class="fas fa-calendar-alt"></i>
                    Event Calendar
                </h2>
            </div>
            <div class="calendar-container">
                <div id="calendar"></div>
            </div>

            <!-- Improved download section -->
            <div class="download-section">
                <% if (user) { %>
                    <div class="download-content">
                        <div class="download-info">
                            <h3>
                                <i class="fas fa-download"></i>
                                Download Calendar
                            </h3>
                            <p>Get the complete event calendar as an ICS file to import into your preferred calendar app.</p>
                        </div>
                        <button id="downloadCalendarBtn" class="download-btn">
                            <i class="fas fa-download"></i>
                            Download ICS File
                        </button>
                    </div>
                    <div class="download-note">
                        <i class="fas fa-info-circle"></i>
                        <span>The calendar is subject to change, so please reference this version if you have a previous download.</span>
                    </div>
                <% } else if (!user) { %>
                    <div class="access-notice">
                        <div class="notice-icon">
                            <i class="fas fa-lock"></i>
                        </div>
                        <div class="notice-content">
                            <h4>Calendar Download Available for Members</h4>
                            <p>
                                <a href="/signin" class="auth-link">Sign in</a> or 
                                <a href="/signup" class="auth-link">join now</a> to download the complete event calendar!
                            </p>
                        </div>
                    </div>
                <% } else { %>
                    <div class="access-notice">
                        <div class="notice-icon">
                            <i class="fas fa-star"></i>
                        </div>
                        <div class="notice-content">
                            <h4>Sign In for Calendar Download</h4>
                            <p>
                                <a href="/signin" class="auth-link">Sign in to your account</a> to access calendar download and other features!
                            </p>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </section>
</main>

